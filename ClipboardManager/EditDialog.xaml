<Window x:Class="ClipboardManager.EditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Clipboard Item" 
        SizeToContent="WidthAndHeight" 
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <!-- Title at the top -->
            <RowDefinition Height="Auto" />
            <!-- TextBox in the middle -->
            <RowDefinition Height="*" />
            <!-- Save Button at the bottom -->
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Edit Clipboard Item" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,10" />

        <!-- TextBox for editing -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
            <TextBox Name="EditTextBox" 
                     TextWrapping="Wrap" 
                     AcceptsReturn="True" 
                     MinWidth="300" 
                     Margin="0,0,0,10" 
                     VerticalAlignment="Stretch" />
        </ScrollViewer>

        <!-- Modern Save Button -->
        <Button Content="Save" 
                Grid.Row="2" 
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Center"
                Height="40"
                Margin="10,10,10,0"
                Click="SaveButton_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Name="PART_Border" 
                            Background="#007ACC" 
                            CornerRadius="5" 
                            SnapsToDevicePixels="True">
                        <TextBlock Text="{TemplateBinding Content}" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" 
                                   FontWeight="Bold" 
                                   Padding="10,5"
                                   Foreground="White" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Hover -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="PART_Border" Property="Background" Value="#005A9E" />
                        </Trigger>
                        <!-- Click -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="PART_Border" Property="Background" Value="#003F73" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>
